<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="imagine" resource="default" engine="innodb" comment="Imagine">
        <column xsi:type="int" name="imagine_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Imagine Id Column"/>
        <column xsi:type="int" name="product_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Product Id Column"/>
        <column xsi:type="int" name="category" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Category Column"/>
        <column xsi:type="varchar" name="url" nullable="false" length="255" comment="Url Column"/>
        <column xsi:type="varchar" name="created_at" nullable="false" length="255" comment="Create At Column"
        default="CURRENT_TIMESTAMP"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="imagine_id"/>
        </constraint>
        <index referenceId="IMAGINE_IMAGINE_ID" indexType="btree">
            <column name="imagine_id"/>
        </index>
    </table>
    <table name="imagine_prompts_log" resource="default" engine="innodb" comment="Imagine Prompts Log">
        <column xsi:type="int" name="log_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Log Id Column"/>
        <column xsi:type="int" name="imagine_id" padding="10" unsigned="true" nullable="false" identity="false"
                comment="Imagine Id Column"/>
        <column xsi:type="varchar" name="prompt" nullable="false" length="255" comment="Prompt Column"/>
        <column xsi:type="varchar" name="created_at" nullable="false" length="255" comment="Create At Column"
                default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="log_id"/>
        </constraint>
        <index referenceId="IMAGINE_PROMPTS_LOG_LOG_ID" indexType="btree">
            <column name="log_id"/>
        </index>
    </table>
</schema>
